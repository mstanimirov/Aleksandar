<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:centerColor="@color/pressed_center" android:centerX="50%" android:endColor="@color/pressed_end" android:startColor="@color/pressed_start" android:type="linear" />
            <!--<stroke
                android:width="2dp"
                android:color="@color/button_border2" />-->
            <corners android:radius="5dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:centerColor="@color/center" android:centerX="50%" android:endColor="@color/end" android:startColor="@color/start" android:type="linear" />
            <!--<stroke
                android:width="2dp"
                android:color="@color/button_border" />-->
            <corners android:radius="5dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

</selector>